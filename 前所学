int dxx(int a,int b)
{	
	int t;
	if(a<0&&b<0)
	{a=-a,b=-b;}
		if(a<0&&b>0)
		{a=-a,b=b;}
			if(a<0&&b>0)
			{a=a,b=-b;}
	t = a+b;
	return t;
		}

int main()
{
	int t,num1,num2;
	printf("请输入两个数字：");
	scanf("%d%d",&num1,&num2);
	t = dxx(num1,num2);

	t=t%2==1?printf("是奇数\n"):printf("是偶数\n");
   //定义字符=关系式?结果1:结果2;
   return 0;
}
