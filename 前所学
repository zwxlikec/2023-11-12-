#include<math.h>
int main()
{
 int m;	//m=期数
 double r = 0,c,s;//s=本息总额，c=本金
 printf("请输入你的存款金额与期限： </x空格/y回车>\n");
  scanf("%lf%d",&c,&m);

	if(m==3)
		r=0.026;
	else if(m==6)
		r=0.028;
	else if(m==12)
		r=0.033;
	else if(m==24)
		r=0.0375;
	else if(m==60)
		r=0.0475;


	if(m==3)
		r=0.026;
	if(m==6)
		r=0.028;
	if(m==12)
		r=0.033;
	if(m==24)
		r=0.0375;
	if(m==36)
		r=0.0425;
	if(m==60)
		r=0.0475;


   switch(m)
   {
   case 3:r=0.026;break;
    case 6:r=0.028;break;
   case 12:r=0.033;break;
     case 24:r=0.0375;break;
       case 36:r=0.0425;break;
       default: r=0.0475;
    
   }
   s = c*pow(1+r,m);
 printf("本息合计金额为：%f\n",s);

   return 0;
}







